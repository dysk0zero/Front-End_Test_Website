{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",  // Changed from pwa-node to node
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "runtimeArgs": ["--inspect=9229"],
      "port": 9229,
      "restart": true,
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
